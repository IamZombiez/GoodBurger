<h3>Welcome to Good Burger, Home of the Good Burger</h3>

<div class ="container">

<div class="row">
  <div id="uneaten" class="col s6">
    <ul>
      {{#each burger}}
        {{#unless this.eaten}}
      	<li>
          <p><span class="label">Burger Name: </span> {{this.burger_name}}</p>
          
          <form action="/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">Eat Me!</button>
          </form>
    
      	</li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  
  <div id="eaten" class="col s6">
    <ul>
      {{#each burger}}
        {{#if this.eaten}}
        <li>
          <p><span class="label">Burger Name: </span> {{this.burger_name}}</p>

          <form action="/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">Eat Me!</button>
          </form>
        </li>
        {{/if}}
        {{/each}}
    </ul>
  </div>

</div>

<h2>Add a Burger</h2>

<form class="create-form" action="/" method="POST">

  <div class="form-group">
    <label for="auth">Burger</label>
    <input type="text" id="newBurger" name="newBurger">
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>